@{
    Layout = ViewBag.Page.LayoutHref;
}
<div class="filterFon">
    <div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Вход</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Регистрация</label>
            <div class="login-form">
                <form class="sign-in-htm" method="post" action="/Account/Entry">
                    <div class="group">
                        <label for="user" class="label">Логин</label>
                        <input id="user" type="text" class="input" name="Login">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Пароль</label>
                        <input id="pass" type="password" class="input" data-type="password" name="Password">
                    </div>
                    <div class="group">
                        <input id="check" type="checkbox" class="check" checked>
                        <label for="check"><span class="icon"></span> Запомнить меня?</label>
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Войти">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <a href="#forgot">Забыли пароль?</a>
                    </div>
                </form>
                <form class="sign-up-htm" method="post" action="/Account/Registration" >
                    <div class="group">
                        <label for="user" class="label">Логин</label>
                        <input id="user" type="text" class="input" name="Login">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Пароль</label>
                        <input id="pass" type="password" class="input" data-type="password" name="Password">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Повторите пароль</label>
                        <input id="pass" type="password" class="input" data-type="password" name="RePassword">
                    </div>
                    <div class="group">
                        <label for="pass" class="label">Электронная почта</label>
                        <input id="pass" type="text" class="input" name="Email">
                    </div>
                    <div class="group">
                        <input type="submit" class="button" value="Зарегистрироваться">
                    </div>
                    <div class="hr"></div>
                    <div class="foot-lnk">
                        <label for="tab-1">Уже зарегистрированы?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

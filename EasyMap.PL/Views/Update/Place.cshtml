@{
    /**/

    ViewBag.Title = "Place";
}
@section Styles
{
    @Styles.Render("~/CSS/AddPlace")
}
@section Body
{
    @using (Html.BeginForm("Place", "Update", FormMethod.Post, new { enctype = "multipart/form-data", @class = "AddPlace" }))
    {
        <div class="container-fluid">
            <div class="row">
                <div class="well center-block">
                    <div class="well-header">
                        <h3 class="text-center text-success"> Добавление объекта </h3>
                        <hr>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-header"></i>
                                    </div>
                                    <input type="text" placeholder="Название" name="Name" class="form-control">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-home"></i>
                                    </div>
                                    <input type="text" placeholder="Адрес" name="Address" class="form-control" id="SearchAddress">
                                    <input type="text" name="Coordinates" hidden>
                                    <div class="input-group-addon" id="openMapForInput" style="cursor: pointer;">
                                        <i class="glyphicon glyphicon-map-marker"></i>
                                    </div>
                                </div>
                                <div class="map" id="AddressMap"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-globe"></i>
                                    </div>
                                    <input type="text" placeholder="Сайт" name="Site" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-earphone"></i>
                                    </div>
                                    <input type="text" placeholder="Телефон" name="Phone" class="form-control">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <i class="glyphicon glyphicon-time"></i>
                            <label>Время работы:</label>
                            <i class="glyphicon glyphicon-plus" id="AddWorkingHour" style="float:right;"></i>
                        </div>
                    </div>
                    <div class="row WorkingHours" id="WorkingHour">
                        <div class="WorkingHour">
                            <div class="col-xs-4">
                                <select type="text" class="form-control multiselect" multiple="multiple" role="multiselect" name="WorkingHour">
                                    <option value="0" selected="selected">Понедельник</option>
                                    <option value="1" selected="selected">Вторник</option>
                                    <option value="2" selected="selected">Среда</option>
                                    <option value="3" selected="selected">Четверг</option>
                                    <option value="4" selected="selected">Пятница</option>
                                    <option value="5">Суббота</option>
                                    <option value="6">Воскресенье</option>
                                </select>
                            </div>
                            <div class="col-xs-3">
                                <button type="button" class="btn TimeBlockBTN" id="BtnTime" title="Время">
                                    Время <b class="caret"></b>
                                    <div class="TimeBlock" id="TimeBlock" style="display:none;">
                                        <div class="InputTime">
                                            <input type="text" placeholder="с" name="TimeFrom" class="form-control time">
                                            <span class="temp"> - </span>
                                            <input type="text" placeholder="до" name="TimeTo" class="form-control time">
                                        </div>
                                        <div class="CheckDayAndNight">
                                            <input type="checkbox" id="DayAndNight" name="dayAndNight">
                                            <label for="DayAndNight">Круглосуточно</label>
                                        </div>
                                    </div>
                                </button>
                            </div>
                            <div class="col-xs-3">
                                <button type="button" class="btn TimeBlockBTN" id="BtnBreakTime" title="Время">
                                    Перерыв <b class="caret"></b>
                                    <div class="TimeBlock" id="TimeBlock" style="display:none;">
                                        <div class="InputTime">
                                            <input type="text" placeholder="с" name="BreakTimeFrom" class="form-control time">
                                            <span class="temp"> - </span>
                                            <input type="text" placeholder="до" name="BreakTimeTo" class="form-control time">
                                        </div>
                                        <div class="CheckDayAndNight">
                                            <input type="checkbox" id="DayAndNight" name="Nonstop" checked>
                                            <label for="DayAndNight">Без перерыва</label>
                                        </div>
                                    </div>
                                </button>
                            </div>
                            <div class="col-xs-2">
                                <button type="button" class="remove" id="RemoveTime" title="Удалить">
                                    <i class="glyphicon glyphicon-minus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="glyphicon glyphicon-list-alt"></i>
                                    </div>
                                    <textarea class="form-control" name="Description" placeholder="Описание"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <div class="form-group">
                                <input type="file" id="PictureLoad" placeholder="Фотографии" name="Photo" class="form-control AddPhoto" multiple>
                                <div class="Pictures"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row widget">
                        <div class="col-md-12 col-xs-12 col-sm-12">
                            <button class="btn btn-warning btn-block"> Добавить </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}

@section Scripts
{
    @Scripts.Render("~/JS/AddPlace")
}
